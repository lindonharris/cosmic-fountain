# Debug Intelligence MCP Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Claude API Configuration
CLAUDE_API_KEY=your_claude_api_key_here

# Budget Controls (Optional - defaults provided)
MONTHLY_BUDGET_USD=25
DAILY_CALL_LIMIT=17
COST_PER_CALL_ESTIMATE=0.05

# MCP Server Configuration
MCP_SERVER_NAME=debug-intelligence
MCP_SERVER_VERSION=1.0.0

# Logging and Debug
LOG_LEVEL=info
DEBUG_MODE=false

# Cache and Storage Paths (Optional - defaults to relative paths)
ERROR_CACHE_PATH=./error-intelligence-cache
USAGE_LOG_PATH=./usage-log.json
TAXONOMY_METADATA_PATH=./taxonomy-metadata.json

# Pattern Engine Configuration
LOCAL_PATTERN_CONFIDENCE_THRESHOLD=85
CLAUDE_FALLBACK_THRESHOLD=70

# Processing Schedule (Optional - uses smart defaults)
# Format: hour (0-23) for processing windows
MONDAY_BATCH_PROCESSING_HOUR=9
WEDNESDAY_ANALYSIS_HOUR=14
FRIDAY_SYNTHESIS_HOUR=16

# Security and Performance
MAX_BATCH_SIZE=20
OPTIMAL_BATCH_SIZE=12
REQUEST_TIMEOUT_MS=30000

# Repository Context (Optional - for enhanced analysis)
DEFAULT_REPO_CONTEXT=local-development
TARGET_REPOSITORIES=cosmic-fountain,style-vault-curation,chat-classify-smart-view,n8n-sandbox

# External Intelligence Sources (Future Use)
ENABLE_EXTERNAL_INTEL=false
EXTERNAL_INTEL_BUDGET_LIMIT=3